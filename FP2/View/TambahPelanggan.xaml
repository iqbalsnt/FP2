<Window x:Class="FP2.View.TambahPelanggan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FP2.View"
        mc:Ignorable="d"
        Title="TambahPelanggan" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="78"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="130"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#CDECD0">
            <Image Width="60" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Source="/Icon/bi_people-fillW.png" Margin="30,0,0,0"/>
            <Label x:Name="lblUser" Content="Tambah Pelanggan" FontSize="25"  Foreground="White" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="100,0,0,0" FontFamily="Arial Rounded MT Bold"/>
        </Grid>

        <Grid Grid.Row="1">
            <Label Content="Nama" FontSize="18" Foreground="Black" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0" FontFamily="Arial Rounded MT Bold" />
            <TextBox x:Name="txtNama" HorizontalAlignment="Right" Height="35" VerticalAlignment="Center" Width="482" TextAlignment="Left" FontSize="17" Margin="0,0,20,0"/>
        </Grid>

        <Grid Grid.Row="2">
            <Label Content="No Handphone" FontSize="18" Foreground="Black" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0" FontFamily="Arial Rounded MT Bold" />
            <TextBox x:Name="txtHp" HorizontalAlignment="Right" Height="35" VerticalAlignment="Center" Width="482" TextAlignment="Left" FontSize="17" Margin="0,0,20,0"/>
        </Grid>

        <Grid Grid.Row="3">
            <Label Content="Tanggal Registrasi" FontSize="18" Foreground="Black" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0" FontFamily="Arial Rounded MT Bold" />
            <DatePicker x:Name="DpRegis" HorizontalAlignment="Right" Height="35"  VerticalAlignment="Center" Width="482" FontSize="17" SelectedDateFormat="Short" Grid.RowSpan="2" Margin="0,0,20,0"/>
        </Grid>

        <Grid Grid.Row="4">
            <Label Content="Alamat" FontSize="18" Foreground="Black" VerticalContentAlignment="Top" HorizontalAlignment="Left" Margin="80,0,0,0" FontFamily="Arial Rounded MT Bold" />
            <TextBox x:Name="txtAlamat" HorizontalAlignment="Right" Height="100" VerticalAlignment="Center" Width="482" TextAlignment="Left" FontSize="17" Margin="0,0,20,0"/>
        </Grid>

        <Grid Grid.Row="5">
            <Button x:Name="BtnTambah" Content="Tambah" HorizontalAlignment="Right" Height="28"  Grid.Row="1" VerticalAlignment="Center" Width="128" Click="BtnTambah_Click" Margin="0,0,20,0" BorderBrush="#FFCDECD0" Background="#FFCDECD0"/>
            <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Right"  VerticalAlignment="Center" Height="29" Width="107" Foreground="Black" BorderBrush="#FFCDECD0" Background="#FFCDECD0" Click="btnBack_Click" Margin="0,0,180,0"/>

        </Grid>

    </Grid>
</Window>
