<Window x:Class="FP2.View.DataPelanggan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FP2.View"
        mc:Ignorable="d"
        Title="Pembayaran" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="178*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Center" Height="78" VerticalAlignment="Center" Width="800" Fill="#FFCDECD0"/>
        <Image HorizontalAlignment="Left" Height="68" Margin="10,0,0,0" VerticalAlignment="Top" Width="66" Source="/Icon/bi_people-fill.png"/>
        <Label Content="Pelanggan" HorizontalAlignment="Left" Height="56" Margin="110,-5,0,0" VerticalAlignment="Top" Width="290" FontSize="36" FontWeight="Bold"/>
        <DataGrid x:Name="DgPelanggan" HorizontalAlignment="Left" Height="239" Margin="10,107,0,0" Grid.Row="1" VerticalAlignment="Top" Width="653" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ComboBox HorizontalAlignment="Left" Height="21" Margin="10,35,0,0" Grid.Row="1" VerticalAlignment="Top" Width="201"/>
        <ComboBox HorizontalAlignment="Left" Height="21" Margin="237,35,0,0" Grid.Row="1" VerticalAlignment="Top" Width="201"/>
        <ComboBox HorizontalAlignment="Left" Height="21" Margin="462,35,0,0" Grid.Row="1" VerticalAlignment="Top" Width="201"/>
        <Button Content="Bayar" HorizontalAlignment="Left" Margin="691,35,0,0" Grid.Row="1" VerticalAlignment="Top" Width="78"/>
        <TextBox HorizontalAlignment="Left" Margin="400,71,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="263"/>
        <Button Content="Cari" HorizontalAlignment="Left" Margin="691,69,0,0" Grid.Row="1" VerticalAlignment="Top" Width="78"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="691,303,0,0" Grid.Row="1" VerticalAlignment="Top" Width="78"/>
    </Grid>
</Window>
